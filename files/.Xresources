! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
!rofi.width: 100
!rofi.padding: 200
!rofi.fuzzy: true
!rofi.eh: 2
!rofi.separator-style: none
!rofi.fixed-num-lines: true
!rofi.lines: 10
!rofi.mesg: ' '
!rofi.color-enabled: true
!rofi.color-window: argb:AA000000, argb:EE000000
!rofi.color-normal: argb:00000000, #C1C1C1, argb:00000000, argb:00000000, #4D97F5
!rofi.color-active: argb:00000000, #91D687, argb:00000000, argb:00000000, #5ADB48
!rofi.color-urgent: argb:00000000, #FF1844, argb:00000000, argb:00000000, #FF1844
!rofi.hide-scrollbar: true
!rofi.bw: 5
!rofi.font: Inconsolata for Powerline 12

! ------------------------------------------------------------------------------
! Xft
! ------------------------------------------------------------------------------

Xft.autohint: false
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

! ------------------------------------------------------------------------------
! Vars
! ------------------------------------------------------------------------------

#define     normal_font         xft:Inconsolata for Powerline:pixelsize=12:antialias=true
#define     bold_font           xft:Inconsolata for Powerline:pixelsize=12:antialias=true:bold
#define     italic_font         xft:Inconsolata for Powerline:pixelsize=12:antialias=true:italic
#define     bold_italic_font    xft:Inconsolata for Powerline:pixelsize=12:antialias=true:bold:italic

! ------------------------------------------------------------------------------
! XTerm
! ------------------------------------------------------------------------------
!
XTerm*font:             normal_font
XTerm*boldFont:         bold_font
XTerm*italicFont:       italic_font
XTerm*boldItalicFont:   bold_italic_font
!XTerm*scrollBar: false
!XTerm*internalBorder: 0
!XTerm*bordeless: true

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------

URxvt*font:             normal_font
URxvt*boldFont:         bold_font
URxvt*italicFont:       italic_font
URxvt*boldItalicFont:   bold_italic_font

URxvt*scrollBar:        false
URxvt*internalBorder:   0
URxvt*bordeless:        true
URxvt*letterSpace:      -1

URxvt.perl-ext-common:  default,selection-to-clipboard,resize-font

URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger

URxvt.iso14755:         false
URxvt.iso14755_52:      false

! ------------------------------------------------------------------------------
