! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.width: 60
rofi.padding: 50
rofi.fuzzy: true
rofi.eh: 2
rofi.separator-style: none
rofi.fixed-num-lines: true
rofi.lines: 10
rofi.mesg: ' '
rofi.color-enabled: true
rofi.color-window: argb:CC000000, argb:22000000
rofi.color-normal: argb:00000000, #C1C1C1, argb:00000000, argb:00000000, #4D97F5
rofi.color-active: argb:00000000, #91D687, argb:00000000, argb:00000000, #5ADB48
rofi.color-urgent: argb:00000000, #FF1844, argb:00000000, argb:00000000, #FF1844
rofi.hide-scrollbar: true
rofi.bw: 5
rofi.font: Inconsolata for Powerline 12
rofi.fake-transparency: true

! ------------------------------------------------------------------------------
! Xft
! ------------------------------------------------------------------------------

Xft.autohint: false
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------

URxvt*font:            xft:Hack:pixelsize=12:antialias=true
URxvt*boldFont:        xft:Hack:pixelsize=12:antialias=true:bold
URxvt*italicFont:      xft:Hack:pixelsize=12:antialias=true:italic
URxvt*boldItalicFont:  xft:Hack:pixelsize=12:antialias=true:bold:italic
URxvt*letterSpace: -2
URxvt*saveLines: 0
URxvt*scrollBar: false
URxvt*internalBorder: 0
URxvt*bordeless: true

*foreground: #AAAAAA
*background: #2F343F
! Change default dark blue for better visibility
*color12: #729FCF
