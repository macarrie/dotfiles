! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.width: 60
rofi.padding: 50
rofi.fuzzy: true
rofi.eh: 2
rofi.separator-style: none
rofi.fixed-num-lines: true
rofi.lines: 10
rofi.mesg: ' '
rofi.color-enabled: true
rofi.color-window: argb:CC000000, argb:22000000
rofi.color-normal: argb:00000000, #C1C1C1, argb:00000000, argb:00000000, #4D97F5
rofi.color-active: argb:00000000, #91D687, argb:00000000, argb:00000000, #5ADB48
rofi.color-urgent: argb:00000000, #FF1844, argb:00000000, argb:00000000, #FF1844
rofi.hide-scrollbar: true
rofi.bw: 5
rofi.font: Inconsolata for Powerline 12
rofi.fake-transparency: true

! ------------------------------------------------------------------------------
! Xft
! ------------------------------------------------------------------------------

Xft.autohint: 0
!Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! ------------------------------------------------------------------------------
! URxvt
! ------------------------------------------------------------------------------

!URxvt.font: xft:Inconsolata for Powerline:size=10:antialias=true, xft:FontAwesome:size=10:antialias=true
URxvt.font: xft:
FontAwesome:size=10:antialias=true
URxvt.boldFont: xft:Inconsolata for Powerline:size=10:bold:antialias=true, xft:FontAwesome:size=10:antialias=true
URxvt.letterSpace: -2
URxvt*saveLines: 10000
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*scrollColor: #C2DD5A
URxvt*scrollBar_floating: false
URxvt*scrollstyle: plain
URxvt*foreground: #AAAAAA
URxvt*background: #2F343F
URxvt*internalBorder: 0
URxvt.bordeless: true
