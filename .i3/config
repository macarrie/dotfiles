# Assigned Ctrl-Mod-L to lock screen via i3lock-wrapper script
bindsym $mod+control+l exec --no-startup-id ~/scripts/i3lock-wrapper.sh --logo

new_window 1pixel
new_float 1pixel

# next/previous workspace
bindsym Mod1+Tab workspace next
bindsym Mod1+Shift+Tab workspace prev
bindsym $mod+Tab workspace back_and_forth

# Sound keymaps
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '5%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '5%-'"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle"
bindsym XF86AudioMicMute exec "amixer -D pulse sset Capture toggle"

bindsym $mod+control+v exec "terminator -x alsamixer"

# bar toggle, hide or show 
bindsym $mod+b bar mode toggle

# Border controls
bindsym $mod+shift+b exec i3-msg border toggle

# Caps lock control
bindsym --release Num_Lock  exec pkill -SIGRTMIN+11 i3blocks

# Run unclutter when starting
exec --no-startup-id unclutter
exec --no-startup-id dropbox start
exec --no-startup-id nm-applet
exec --no-startup-id feh --bg-fill ~/Pictures/totoro.png
